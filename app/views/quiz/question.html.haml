%center
	%h1
		Question
		= @current + 1
		of
		= @total
	%p.question
		= @question.text

	= form_tag({:controller => "quiz", :action => "answer"}) do
		- @choices.each do |choice|
			= image_submit_tag(image_path(choice.image_src), {:name=>'chosen',:value=>choice.id})
= submit_tag("Continue", :class => "submit")