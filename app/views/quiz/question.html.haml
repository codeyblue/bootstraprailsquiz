%h1
	Question 
	= @current + 1
	of
	= @total
%p.question
	= @question.text

= form_tag({:controller => "quiz", :action => "answer"}) do
	.form-inline
		- @choices.each do |choice|
			%p.choice
				= radio_button_tag(:choice, choice.id)
				= label_tag("choice_".concat(choice.id.to_s).to_sym, choice.text)

	.center
		= submit_tag("Continue", :class => "submit")